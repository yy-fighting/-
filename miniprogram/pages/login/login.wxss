.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.login-form {
  background-color: #fff;
  padding: 30px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  width: 80%;
  max-width: 400px;
}

.title {
  font-size: 20px;
  margin-bottom: 20px;
  color: #333;
  display: block;
  text-align: center;
}

.input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 0 10px;
  margin-bottom: 20px;
  font-size: 14px;
  box-sizing: border-box;
}

.login-btn {
  width: 100%;
  height: 40px;
  background-color: #1aad19;
  color: white;
  border-radius: 5px;
  font-size: 16px;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s;
}

.login-btn:hover {
  background-color: #169d12;
}