/* 全局页面样式 */
page {
  background-color: #f8f8f8;  /* 页面背景颜色 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;  /* 全局字体 */
}

/* 全局按钮样式 */
button {
  background-color: #07c160;  /* 按钮背景颜色 */
  color: white;  /* 按钮文字颜色 */
  border-radius: 5px;  /* 按钮圆角 */
  padding: 10px 20px;  /* 按钮内边距 */
  font-size: 16px;  /* 按钮文字大小 */
  margin: 10px;  /* 按钮外边距 */
}

/* 全局输入框样式 */
input {
  border: 1px solid #e0e0e0;  /* 输入框边框 */
  border-radius: 5px;  /* 输入框圆角 */
  padding: 10px;  /* 输入框内边距 */
  font-size: 14px;  /* 输入框文字大小 */
  margin: 10px;  /* 输入框外边距 */
  width: 80%;  /* 输入框宽度 */
}